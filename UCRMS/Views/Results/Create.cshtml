@model UCRMS.Models.Result
@using Vereyon.Web;

@{
    ViewBag.Title = "Save Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Save Student Result</h2>
<hr />
@Html.RenderFlashMessages()
<div class="well">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-offset-3">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.StudentId, "Student Reg. No.", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("StudentId", null, "-- Select Student --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Name</label>
                <div class="col-md-10">
                    <input type="text" readonly class="form-control" id="name" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input type="email" readonly class="form-control" id="email" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Department</label>
                <div class="col-md-10">
                    <input type="text" readonly class="form-control" id="department" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Course</label>
                <div class="col-md-10">
                    <select class="form-control" name="CourseId" id="courses">
                        <option value=0>-- Select Course --</option>
                    </select>
                    @*@Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger" })*@
                    <span class="text-danger" id="msg"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GradeId, "Grade", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("GradeId", null, "--Select Grade --", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GradeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#StudentId").change(function () {

                $("#name").empty();
                $("#email").empty();
                $("#department").empty();
                $("#courses").empty();
                var studentId = $("#StudentId").val();
                var parameter = { stuId: studentId };
                $("#StudentId").append('<option value=0>-- Select Student --</option>');
                $("#courses").append('<option value=0>-- Select Course --</option>');

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetStudentById", "CourseEnrolls")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(parameter),
                    success: function (student) {
                        $("#name").val(student.Name);
                        $("#email").val(student.Email);
                        $("#department").val(student.Department.Code);
                    }
                });

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetCoursesByStudentId", "Results")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(parameter),
                    success: function(courseList) {
                        $.each(courseList, function(key, value) {
                            $("#courses").append('<option value=' + value.CourseId + '>' + value.Course.Code + '</option>');
                        });
                    }
                });
            });
           
        });
    </script>
}
